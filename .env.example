# Docker FaaS Configuration Example
# Copy this file to .env and update with your values

# Note: This file contains SERVER configuration for the Docker FaaS gateway.
# For CLIENT configuration (faas-cli, SDKs), use standard OpenFaaS environment variables:
#   OPENFAAS_URL=http://localhost:8080  # Preferred (OpenFaaS standard)
#   OPENFAAS_USERNAME=admin             # For Basic Auth
#   OPENFAAS_PASSWORD=admin             # For Basic Auth
#   OPENFAAS_TOKEN=<token>              # For Bearer Token auth

# Gateway Configuration
GATEWAY_PORT=8080
METRICS_PORT=9090
CORS_ALLOWED_ORIGINS=

# Docker Configuration
DOCKER_HOST=
FUNCTIONS_NETWORK=docker-faas-net
GATEWAY_CONTAINER_NAME=
DEBUG_BIND_ADDRESS=127.0.0.1

# Authentication
AUTH_ENABLED=true
AUTH_USER=admin
AUTH_PASSWORD=admin  # CHANGE THIS IN PRODUCTION!
REQUIRE_AUTH_FOR_FUNCTIONS=true  # Set false for OpenFaaS compatibility
AUTH_RATE_LIMIT=10
AUTH_RATE_WINDOW=1m
AUTH_TOKEN_TTL=30m

# Database
STATE_DB_PATH=docker-faas.db

# Logging
LOG_LEVEL=info  # debug, info, warn, error

# Timeouts (in Go duration format: 30s, 1m, 1h)
READ_TIMEOUT=60s
WRITE_TIMEOUT=60s
EXEC_TIMEOUT=60s

# Scaling
DEFAULT_REPLICAS=1
MAX_REPLICAS=10

# Metrics
METRICS_ENABLED=true

# Build History
BUILD_HISTORY_LIMIT=100
BUILD_HISTORY_RETENTION=24h
BUILD_OUTPUT_LIMIT=204800
