# Docker FaaS Configuration Example
# Copy this file to .env and update with your values

# Gateway Configuration
GATEWAY_PORT=8080
METRICS_PORT=9090

# Docker Configuration
DOCKER_HOST=
FUNCTIONS_NETWORK=docker-faas-net
GATEWAY_CONTAINER_NAME=
DEBUG_BIND_ADDRESS=127.0.0.1

# Authentication
AUTH_ENABLED=true
AUTH_USER=admin
AUTH_PASSWORD=admin  # CHANGE THIS IN PRODUCTION!

# Database
STATE_DB_PATH=docker-faas.db

# Logging
LOG_LEVEL=info  # debug, info, warn, error

# Timeouts (in Go duration format: 30s, 1m, 1h)
READ_TIMEOUT=60s
WRITE_TIMEOUT=60s
EXEC_TIMEOUT=60s

# Scaling
DEFAULT_REPLICAS=1
MAX_REPLICAS=10

# Metrics
METRICS_ENABLED=true
